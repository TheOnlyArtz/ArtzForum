<!DOCTYPE html>
<html>
    <head>
        <title></title>
        <!-- jQuery is required -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <!-- Compiled and minified CSS -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <!-- Compiled and minified JavaScript -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
  <body>
    <!-- Dropdown Structure -->
    <ul id="dropdown1" class="dropdown-content">
      <li><a href="#!">one</a></li>
      <li><a href="#!">two</a></li>
      <li class="divider"></li>
      <li><a href="#!">three</a></li>
    </ul>
    <nav class="cyan">
      <div class="nav-wrapper">
        <a href="#!" class="brand-logo">Forum</a>
        <ul class="right hide-on-med-and-down ">
          <!-- Dropdown Trigger -->
          <li><a class="dropdown-button belowOrigin" href="#!" data-activates="dropdown1" data-beloworigin="true"><i class="material-icons">menu</i></a></li>
        </ul>
      </div>
    </nav>
    <div class="container">
      <div class="row" style="padding-top : 8% ">
        <h4 class="center-align"><strong><%- title %></strong></h4>
        <div class="col s12">
          <h6 class="center-align"><%- `${content}` %></h6>
        </div>
      </div>
      <div class="container">
        <div class="row center-align center" style="padding-top : 10%;">
          <form class="col s12" method="post" action="/subject/<%=subject%>/post/<%=postID%>">
           <div class="row">
             <div class="input-field col s12">
                 <i class="material-icons prefix">mode_edit</i>
                 <textarea class="materialize-textarea" name="commentContent" required placeholder="content"></textarea>
                 <input name="postSubject" value="<%- subject  %>" style="display : none;"></input>
                 <input name="postID" value="<%- postID  %>" style="display : none;"></input>
                 <input name="postContent" value="<%- content  %>" style="display : none;"></input>
                 <input name="title" value="<%- title  %>" style="display : none;"></input>

                 <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                   <i class="material-icons right">send</i>
                 </button>
               </div>
             </div>
           </form>
         </div>
      </div>
      <%console.log(comments.length)%>
      <% for (let i = 0; i < comments.length; i++) {%>
      <div class="col s12 m8 offset-m2 l6 offset-l3">
        <div class="card-panel grey lighten-5 z-depth-1">
          <div class="valign-wrapper">
              <div class="col s2" style="padding-right :1.5%">
                <img src="https://goo.gl/dkBPC6" alt="" class="circle responsive-img">
              </div>
              <div class="col s10">
                <span class="black-text">
                  <%-comments[i].content%>
                </span>
              </div>
          </div>
        </div>
      </div>
      <% } %>
    </body>


</html>
