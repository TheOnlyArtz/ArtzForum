<!DOCTYPE html>
<html>
    <head>
        <title></title>
        <!-- jQuery is required -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <!-- Compiled and minified CSS -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <!-- Compiled and minified JavaScript -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.5.1/css/bulma.min.css"> -->
  <body>
    <!-- Dropdown Structure -->
    <ul id="dropdown1" class="dropdown-content">
      <li><a href="#!">one</a></li>
      <li><a href="#!">two</a></li>
      <li class="divider"></li>
      <li><a href="#!">three</a></li>
    </ul>
    <nav class="cyan">
      <div class="nav-wrapper">
        <a href="#!" class="brand-logo">Forum</a>
        <ul class="right hide-on-med-and-down ">
          <!-- Dropdown Trigger -->
          <li><a class="dropdown-button belowOrigin" href="#!" data-activates="dropdown1" data-beloworigin="true"><i class="material-icons">menu</i></a></li>
        </ul>
      </div>
    </nav>
   </body>

   <div class="container">
     <h4 class="center-align grey-text lighten-2">Submit a new post at <%= subject %></h4>
     <div class="row center-align center" style="padding-top : 10%;">
       <form class="col s12" method="post" action="/subject/test/newPost">
       <div class="" style="padding-left : 28%">
         <div class="input-field col s6">
          <i class="material-icons prefix">menu</i>
          <input name="postTitle" required placeholder="Title"></input>
          <input name="postSubject" value="<%- subject  %>" style="display : none;"></input>
        </div>
       </div>
        <div class="row">
          <div class="input-field col s12">
              <i class="material-icons prefix">mode_edit</i>
              <input class="materialize-textarea" name="postContent" required placeholder="content"></input>
              <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                <i class="material-icons right">send</i>
              </button>
            </div>
          </div>
        </form>
      </div>
   </div>

</html>
